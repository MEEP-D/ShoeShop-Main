@model ShoeShop.Models.Contact
@{
	ViewData["Title"] = "Contact";
}

@section Styles {
	<link href="~/css/contact.css" rel="stylesheet">
	<link rel="stylesheet" href="~/admin/js/plugins/sweetalert2/sweetalert2.min.css">
}


<main class="bg_gray">
	<div class="container margin_60">
		<div class="main_title">
			<h2>Liên hệ ShoeShop</h2>
			<p>
				Chúng tôi luôn sẵn sàng hỗ trợ bạn. Hãy liên hệ ngay với ShoeShop để được tư vấn tốt nhất!
			</p>
		</div>
		<div class="row justify-content-center">
			<div class="col-lg-4">
				<div class="box_contacts">
					<i class="ti-support"></i>
					<h2>Trung tâm hỗ trợ ShoeShop</h2>
					<a href="#0">+84 123-456-789</a> - <a href="#0">hotro@shoeshop.com</a>
					<small>Thứ 2 - Thứ 6: 9h - 18h | Thứ 7: 9h - 14h</small>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="box_contacts">
					<i class="ti-map-alt"></i>
					<h2>Showroom ShoeShop</h2>
					<div>Bắc Từ Liêm, Hà Nội</div>
					<small>Thứ 2 - Thứ 6: 9h - 18h | Thứ 7: 9h - 14h</small>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="box_contacts">
					<i class="ti-package"></i>
					<h2>Hỗ trợ đặt hàng</h2>
					<a href="#0">+84 123-456-789</a> - <a href="#0">donhang@shoeshop.com</a>
					<small>Thứ 2 - Thứ 6: 9h - 18h | Thứ 7: 9h - 14h</small>
				</div>
			</div>
		</div>
	</div>

	<div class="bg_white">
		<div class="container margin_60_35">
			<h4 class="pb-3">Gửi tin nhắn cho chúng tôi</h4>
			<div class="row">
				<div class="col-lg-4 col-md-6 add_bottom_25">
					<form asp-controller="Contact" asp-action="SubmitContact" method="post">
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Họ và tên *" asp-for="Name">
							<span asp-validation-for="Name"></span>
						</div>
						<div class="form-group">
							<input class="form-control" type="email" placeholder="Email *" asp-for="Email">
							<span asp-validation-for="Email"></span>
						</div>
						<div class="form-group">
							<textarea class="form-control" style="height: 150px;" placeholder="Nội dung *" asp-for="Message"></textarea>
							<span asp-validation-for="Message"></span>
						</div>
						<div class="form-group">
							<input class="btn_1 full-width" type="submit" value="Gửi tin nhắn">
						</div>
					</form>
				</div>
				<div class="col-lg-8 col-md-6 add_bottom_25">
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d119136.88951780142!2d105.6787226575053!3d21.071551959289955!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31345522c2c40fdb%3A0xf09734667a0bd56!2zQuG6r2MgVOG7qyBMacOqbSwgSMOgIE7hu5lpLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1743086323225!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
			</div>
		</div>
	</div>
</main>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}



