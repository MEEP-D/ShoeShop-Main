@{
	ViewData["Title"] = "Trợ giúp";
}

@section Styles {
	<link href="~/css/faq.css" rel="stylesheet">
}

<main class="bg_gray">
	<div class="container margin_30">
		<div class="page_header">
			<div class="breadcrumbs">
				<ul>
					<li><a href="#">Trang chủ</a></li>
					<li><a href="#">Danh mục</a></li>
					<li>Trang hiện tại</li>
				</ul>
			</div>
			<h1>Hỗ trợ và trợ giúp</h1>
		</div>
		<!-- /page_header -->
		<div class="search-input">
			<input type="text" placeholder="Tìm kiếm câu hỏi hoặc bài viết...">
			<button type="submit"><i class="ti-search"></i></button>
		</div>
		<!-- /search-input -->

		<div class="row">
			<div class="col-lg-4 col-md-6">
				<a class="box_topic" href="#0">
					<i class="ti-wallet"></i>
					<h3>Thanh toán</h3>
					<p>Hướng dẫn về cách thanh toán và các phương thức thanh toán có sẵn.</p>
				</a>
			</div>
			<div class="col-lg-4 col-md-6">
				<a class="box_topic" href="#0">
					<i class="ti-user"></i>
					<h3>Tài khoản</h3>
					<p>Hướng dẫn tạo tài khoản, quản lý thông tin và bảo mật tài khoản.</p>
				</a>
			</div>
			<div class="col-lg-4 col-md-6">
				<a class="box_topic" href="#0">
					<i class="ti-help"></i>
					<h3>Trợ giúp chung</h3>
					<p>Các câu hỏi thường gặp và thông tin hỗ trợ chung về cửa hàng.</p>
				</a>
			</div>
			<div class="col-lg-4 col-md-6">
				<a class="box_topic" href="#0">
					<i class="ti-truck"></i>
					<h3>Vận chuyển</h3>
					<p>Thông tin về phương thức giao hàng, thời gian giao và phí vận chuyển.</p>
				</a>
			</div>
			<div class="col-lg-4 col-md-6">
				<a class="box_topic" href="#0">
					<i class="ti-eraser"></i>
					<h3>Hủy đơn hàng</h3>
					<p>Hướng dẫn hủy đơn hàng và điều kiện áp dụng khi hủy.</p>
				</a>
			</div>
			<div class="col-lg-4 col-md-6">
				<a class="box_topic" href="#0">
					<i class="ti-comments"></i>
					<h3>Đánh giá</h3>
					<p>Cách để lại đánh giá và phản hồi về sản phẩm.</p>
				</a>
			</div>
		</div>
		<!--/row-->
	</div>
	<!-- /container -->
	<div class="bg_white">
		<div class="container margin_30">
			<h5>Bài viết phổ biến</h5>
			<div class="list_articles add_bottom_15 clearfix">
				<ul>
					<li><a href="#0"><i class="ti-file"></i><strong>Tài khoản</strong> - Hướng dẫn tạo và quản lý tài khoản</a></li>
					<li><a href="#0"><i class="ti-file"></i><strong>Tài khoản</strong> - Cách thay đổi thông tin tài khoản</a></li>
					<li><a href="#0"><i class="ti-file"></i><strong>Hoàn tiền</strong> - Chính sách hoàn tiền khi hủy đơn</a></li>
					<li><a href="#0"><i class="ti-file"></i><strong>Vận chuyển</strong> - Thời gian và phí vận chuyển</a></li>
					<li><a href="#0"><i class="ti-file"></i><strong>Thanh toán</strong> - Phương thức thanh toán được chấp nhận</a></li>
					<li><a href="#0"><i class="ti-file"></i><strong>Bảo hành</strong> - Chính sách bảo hành sản phẩm</a></li>
					<li><a href="#0"><i class="ti-file"></i><strong>Hoàn tiền</strong> - Điều kiện và quy trình hoàn tiền</a></li>
					<li><a href="#0"><i class="ti-file"></i><strong>Đánh giá</strong> - Cách viết đánh giá về sản phẩm</a></li>
				</ul>
			</div>
			<!-- /list_articles -->
		</div>
	</div>
	<!-- /bg_white -->
</main>
